{
  "name": "@halliganjs/console",
  "version": "0.0.0",
  "description": "A simple object-oriented console command runner that can be used with Halligan JS or as a standalone library.",
  "files": [
    "/dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "lint": "eslint --ext ts .",
    "lint:fix": "eslint --ext ts --fix .",
    "release": "npm run build && npm publish",
    "test": "mocha -r ts-node/register \"tests/setup.ts\" \"tests/**/*.test.ts\"",
    "test:html": "nyc --reporter=html --reporter=text npm run test",
    "test:lcov": "nyc --reporter=lcovonly --reporter=text npm run test",
    "test:summary": "nyc --reporter=text-summary npm run test",
    "test:text": "nyc --reporter=text npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/halliganjs/console.git"
  },
  "author": "Jarret Byrne <jarret@solvomedia.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/halliganjs/console/issues"
  },
  "homepage": "https://github.com/halliganjs/console#readme",
  "devDependencies": {
    "@types/chai": "^4.2.16",
    "@types/mocha": "^8.2.2",
    "@types/sinon": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chai": "^4.3.4",
    "coveralls": "^3.1.0",
    "eslint": "^7.24.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "sinon": "^10.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@types/node": "^14.14.41",
    "@types/yargs": "^16.0.1",
    "chalk": "^4.1.0",
    "yargs": "^16.2.0"
  }
}
